<Window x:Class="MailClient_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Menu Height="21" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <MenuItem x:Name="MenuItemFile" Header="File">
                <MenuItem Header="User Settings" HorizontalAlignment="Left" Width="185" Click="MenuItem_Click"/>
                <MenuItem Header="Close" HorizontalAlignment="Left" Width="145"/>
            </MenuItem>
            <MenuItem Header="Mail"/>
        </Menu>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="500*"/>
            </Grid.ColumnDefinitions>
            <TreeView HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch"/>
            <ListView Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch">
                <ListView.View>
                    <GridView />
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
    
</Window>
